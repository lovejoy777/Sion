<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginBottom="20dp"
            android:text="@string/homeTitle"
            android:id="@+id/textView9"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textColor="@color/main"
            android:textSize="@dimen/title_text_size" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView5"
            android:src="@drawable/ic_home"
            android:layout_margin="20dp"
            android:layout_below="@+id/textView9"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/imageReference" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:src="@drawable/ic_script"
            android:layout_alignTop="@+id/buttoninitd"
            android:layout_marginLeft="20dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:contentDescription="@string/imageReference" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="@string/homebutton1txt"
            android:id="@+id/buttoninitd"
            android:layout_toEndOf="@+id/imageView"
            android:layout_below="@+id/imageView5"
            android:layout_toRightOf="@+id/imageView"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView4"
            android:layout_alignTop="@+id/buttonflasher"
            android:layout_marginLeft="20dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/ic_yellowflash"
            android:contentDescription="@string/imageReference" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="@string/homebutton2txt"
            android:id="@+id/buttonflasher"
            android:layout_centerVertical="true"
            android:layout_below="@+id/buttoninitd"
            android:layout_margin="10dp"
            android:layout_toRightOf="@+id/imageView"
            android:layout_toEndOf="@+id/imageView"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView6"
            android:layout_marginLeft="20dp"
            android:src="@drawable/ic_file"
            android:layout_alignTop="@+id/buildpropbutton"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:contentDescription="@string/imageReference" />


        <Button
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="@string/homebutton3txt"
            android:id="@+id/buildpropbutton"
            android:layout_centerVertical="true"
            android:layout_below="@+id/buttonflasher"

            android:layout_toRightOf="@+id/imageView6"
            android:layout_toEndOf="@+id/imageView6"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_alignRight="@+id/buttonflasher"
            android:layout_alignEnd="@+id/buttonflasher" />






    </RelativeLayout>


</ScrollView>