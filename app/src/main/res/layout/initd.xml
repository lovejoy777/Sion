<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/initdtitlechoose"
        android:textColor="@color/main"
        android:id="@+id/textView"
        android:layout_gravity="center_horizontal"
        android:textSize="@dimen/title_text_size" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Choose a path with the file chooser"
        android:textSize="20sp"
        android:id="@+id/tvidpath"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"/>



    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="File Chooser"
        android:id="@+id/buttoninitdfilechooser"
        android:layout_gravity="center_horizontal"
        android:textSize="30sp" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Then press the install button"
        android:textSize="20sp"
        android:id="@+id/tv1"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"/>



    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="Install"
        android:id="@+id/idinstallbutton"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Finally"
        android:textSize="20sp"
        android:id="@+id/tv2"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="Reboot"
        android:id="@+id/rebootbutton"
        android:layout_gravity="center_horizontal"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="Delete Chooser"
        android:id="@+id/deletechooserbutton"
        android:layout_gravity="center_horizontal" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm before deleting"
        android:id="@+id/deletecb"
        android:layout_gravity="center_horizontal" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ff0000"
        android:textSize="30sp"
        android:text="Delete"
        android:id="@+id/deletebutton"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="use the delete button with caution"
        android:id="@+id/textView7"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="It uses root permissions"
        android:id="@+id/textView8"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Init.d scripts can be found at"
        android:id="@+id/textView9"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/system/etc/init.d/"
        android:id="@+id/textView10"
        android:layout_gravity="center_horizontal" />


</LinearLayout>