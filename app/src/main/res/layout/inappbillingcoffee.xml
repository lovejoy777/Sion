<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >


<RelativeLayout

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="@dimen/setSubHead"
            android:text="@string/donations"
            android:textColor="@color/main"
            android:layout_marginTop="20dp"
            android:id="@+id/iabtv1"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/forthedev"
            android:id="@+id/iabtv2"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>
    <!-- Button 1 -->
    <LinearLayout
        android:gravity="center_horizontal"

        android:layout_below="@+id/linearLayout1"
        android:layout_marginTop="40dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout2">




            <!-- Button 1 -->

            <Button

                android:layout_width="220dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:text="@string/buy_string1"
                android:id="@+id/donBtn1"
                android:onClick="buyClick1"/>



        <Button

            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:text="@string/clickme_string1"
            android:id="@+id/clickButton1"
            android:onClick="buttonClicked1"/>


    </LinearLayout>
    <!-- Button 2 -->
    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_centerInParent="true"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout3">




            <!-- Button 2 -->

            <Button
                android:hapticFeedbackEnabled="true"
                android:layout_width="220dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:text="@string/buy_string2"
                android:id="@+id/donBtn2"
                android:onClick="buyClick2">

                </Button>



        <Button
            android:hapticFeedbackEnabled="true"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:text="@string/clickme_string2"
            android:id="@+id/clickButton2"
            android:onClick="buttonClicked2"/>


    </LinearLayout>

    <!-- Button 3 -->
    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_centerInParent="true"
        android:layout_below="@+id/linearLayout3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout4">




            <!-- Button 3 -->

            <Button
                android:hapticFeedbackEnabled="true"
                android:layout_width="220dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:text="@string/buy_string3"
                android:id="@+id/donBtn3"
                android:onClick="buyClick3"/>



        <Button
            android:hapticFeedbackEnabled="true"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:text="@string/clickme_string3"
            android:id="@+id/clickButton3"
            android:onClick="buttonClicked3"/>


    </LinearLayout>

    <!-- Buttons 4 -->
    <LinearLayout

        android:gravity="center_horizontal"
        android:layout_centerInParent="true"
        android:layout_below="@+id/linearLayout4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout5">

            <!-- Buttons 4 -->

            <Button
                android:hapticFeedbackEnabled="true"
                android:layout_width="220dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:text="@string/buy_string4"
                android:id="@+id/donBtn4"
                android:onClick="buyClick4"/>




        <Button
            android:hapticFeedbackEnabled="true"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:text="@string/clickme_string4"
            android:id="@+id/clickButton4"
            android:onClick="buttonClicked4"/>


    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/afterpurchase"
        android:textSize="15sp"
        android:id="@+id/iabtv4"
        android:layout_below="@+id/linearLayout5"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/thankyou"
        android:textSize="25sp"
        android:textColor="@color/main"
        android:id="@+id/iabtv3"
        android:layout_below="@+id/iabtv4"
        android:layout_centerHorizontal="true" />


</RelativeLayout>

</ScrollView>