<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:text="@string/settingsTitle"
        android:textColor="@color/main"
        android:id="@+id/textView6"
        android:layout_gravity="center_horizontal"
        android:textSize="@dimen/title_text_size"  />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:id="@+id/imageView15"
        android:src="@drawable/ic_launcher_gear"
        android:layout_gravity="center_horizontal" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:text="@string/ticktoapply"
        android:id="@+id/checkBoxDark"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ifyouwantdark"
        android:id="@+id/textView10"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/savecb"
        android:id="@+id/textView11"
        android:layout_gravity="center_horizontal" />



    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="40dp"
        android:background="#00000000"
        android:id="@+id/saveButton"
        android:src="@drawable/ic_diskette"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@string/imageReference" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView20"
        android:text="@string/xdaText"
        android:layout_gravity="center_horizontal" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="40dp"
        android:id="@+id/xdaButton"
        android:src="@drawable/xdaicon"
        android:layout_gravity="center_horizontal" />



</LinearLayout>